<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.produccion.ProduccionEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del ciclo" />

        <EditText
            android:id="@+id/input_variedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Variedad" />

        <EditText
            android:id="@+id/input_numero_plantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="NÃºmero de plantas" />

        <EditText
            android:id="@+id/input_fecha_siembra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha siembra (dd/MM/yyyy)" />

        <EditText
            android:id="@+id/input_fecha_estimada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha estimada cosecha (dd/MM/yyyy)" />

        <EditText
            android:id="@+id/input_notas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:hint="Notas" />

        <Button
            android:id="@+id/button_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>
