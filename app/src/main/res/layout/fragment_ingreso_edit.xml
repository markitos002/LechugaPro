<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.comercializacion.ingreso.IngresoEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha del Ingreso -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayoutFechaIngreso"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Fecha del Ingreso (dd/MM/yyyy)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextFechaIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Concepto del Ingreso -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayoutConceptoIngreso"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Concepto">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextConceptoIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Importe del Ingreso -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayoutImporteIngreso"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Importe ($)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextImporteIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estado de pago (Pagado / En deuda) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayoutEstadoPago"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Estado de pago"
            app:endIconMode="dropdown_menu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteEstadoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonGuardarIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Ingreso" />

    </LinearLayout>
</ScrollView>